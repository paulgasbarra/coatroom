<div class="container">
  <div class= "sixteen columns">
    <h1>Coatroom</h1>
  </div>

  <h1>Admins only!</h1>
  <h2>Hold Records</h2>

  <table class="hold_records">
    <tr>
      <th>Id</th>
      <th>User Id</th>
      <th>Checker Id</th>
      <th>Status</th>
      <th>Dropoff Day</th>
      <th>Dropoff Time</th>
      <th>Pickup Day</th>
      <th>Pick Time</th>
      <th>Hold Complete</th>
    </tr>
    <% @hold_records.each do |record| %>
      <tr>
        <td><%= record.id %></td>
        <td><%= record.user_id %></td>
        <td><%= record.checker_id %></td>
        <td><%= record.status %></td>
        <td><%= record.dropoff_day %></td>
        <td><%= record.dropoff_time %></td>
        <td><%= record.pickup_day %></td>
        <td><%= record.pickup_time %></td>
        <td><%= record.hold_complete %></td>

        <td><%= link_to 'Delete Hold Record', hold_record_path(record), :method => :delete %></td>

      </tr>
    <% end %>
  </table>
