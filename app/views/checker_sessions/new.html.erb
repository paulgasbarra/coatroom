<div class="container">
  <div class= "sixteen columns">
    <h1>Coatroom</h1>
  </div>

  <div class = "sixteen columns">
    <h3>Log-In as a Checker</h3>
  </div>

  <div class = "sixteen columns">
    <%= form_tag checker_sessions_path do %>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <%= submit_tag "Log In" %>
    <% end %>
    <%= link_to "Return to Search", root_path %>
  </div>

</div>
