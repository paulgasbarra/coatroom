<%= form_for @hold_record do |f| %>
  <%= f.hidden_field :checker_id, :value => @checker.id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :status, :value => "scheduled" %>
  <%= f.hidden_field :hold_complete, :value => false %>
  <%= f.label :Dropoff_time %>
  <%= f.time_field :dropoff_time %>
  <%= f.label :Dropoff_day %>
  <%= f.date_field :dropoff_day %>
  <%= f.label :Pickup_time %>
  <%= f.time_field :pickup_time %>
  <%= f.label :Pickup_day %>
  <%= f.date_field :pickup_day %>
  <%= f.submit %>
<% end %>
